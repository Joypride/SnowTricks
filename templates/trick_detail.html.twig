{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Connexion{% endblock %}

{% block content %}
<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center img-fluid">
    <div class="container text-center position-relative">
        <h1>{{ trick.name }}</h1>
    </div>
    <a href="#" class="scroll-down"><span class="iconify" data-icon="ant-design:arrow-down-outlined" data-width="30" data-height="30"></span></a>
</section>
    <section class="pt-5 pb-5">
        <div class="container">

                <div class="row d-flex justify-content-center">

                    <div class="col-lg-6 col-md-12">
                    <div id="carouselPhotosControls" class="carousel-photo carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for media in trick.medias %}
                            {% if media.type == 0 %}
                                {% if loop.index0 %}
                                <div class="carousel-item active">
                                {% else %}
                                <div class="carousel-item">
                                {% endif %}
                                    <img class="img-fluid" src="{{ media.url }}" alt="Snowboard trick">
                                </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselPhotosControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselPhotosControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    </div>

                    <div class="col-lg-6 col-md-12">
                    <div id="carouselVideosControls2" class="col-lg-6 col-md-12 carousel carousel-video slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for media in trick.medias %}
                            {% if media.type == 1 %}
                                {% if loop.index0 %}
                                <div class="carousel-item active">
                                {% else %}
                                <div class="carousel-item">
                                {% endif %}
                                <iframe width="478" height="315" src="{{ media.url }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselVideosControls2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselVideosControls2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                        </a>
                    </div>
                    </div>
                    
                </div>
        </div>
    </section>
    <section>
        <div class="container">
            <p class="text-center">{{ trick.description }}</p>
            <button class="btn btn-custom">Catégorie</button><span>Catégorie: {{ trick.category }}</span>
        </div>
    </section>

    <!-- Comment section -->
<div id="comment" class="container mb-5 mt-5">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center mb-4">Commentaires</h3>

                {% if app.user %}
                <form method="POST">
					<div class="row">
                        <div class="media col-12 d-flex justify-content-center text-center">
							<div><img class="rounded-circle mb-2" src="./public/img/user.jpg" width="40">
						</div>
							<div class="form-group mx-auto">
								<textarea rows="2" cols="50" name="content" class="form-control register-form mx-auto shadow-none textarea"></textarea>
							</div>
								<input type="hidden" name="id" value="{{ trick.id }}">
							</div>
						<button type="submit" id="register-btn" class="btn btn-block btn-comment">Publier</button>
					</div>
				</form>
                {% else %}
                <p>Vous devez vous connecter pour pouvoir commenter.</p>
                {% endif %}

                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            {% for comment in trick.comments %}
                            <div class="col-8 d-flex">
                                <h5>{{ comment.user }}</h5> <span>&nbsp;- {{ comment.date | date('d/m/Y à h:i') }}</span>
                            </div>
                        </div>{{ comment.content }} 
                    </div>
					{% endfor %}
                </div>
            </div>
        </div>
</div>
<!-- End Comment section -->
{% endblock %}