<!DOCTYPE html>
<html>
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<!-- Favicon -->
			<link
			rel="shortcut icon" type="image/x-icon" href="./public/favicon.ico"/>
			<!-- Bootstrap CSS -->
			<link
			rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"/>
			<!-- Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

			<base
			href="/"/>
			<!-- Fontawesome -->
			{# // <script src="https://kit.fontawesome.com/885c50c641.js" crossorigin="anonymous"></script> #}
      <script src="https://kit.fontawesome.com/362e981ce3.js" crossorigin="anonymous"></script>

			<!-- CSS -->
			<link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}"/>
		{% endblock %}
	</head>
	<body>
			{% block header %}
				<nav class="navbar navbar-expand-md">
					<div class="container">
						<a class="navbar-brand d-none d-lg-block" href="/"><img src="/img/logo.png"></a>           
          
            <!-- Mobile Nav -->
            <div class="d-lg-none w-100">
              <ul class="nav-link mobile-ul">
                <li class="nav-item">
                  <a class="nav-link" href="/"><i class="fas fa-home"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/tricks"><i class="fa-solid fa-person-snowboarding"></i></a>
                </li>
                {% if session is defined and session.id is defined %}
                <li class="nav-item">
                  <a class="nav-link" href="/logout"><i class="fa-solid fa-right-to-bracket"></i></a>
                </li>
                {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="/login"><i class="fa-solid fa-right-to-bracket"></i></a>
                </li>
                {% endif %}
              </ul>
            </div>
          <!-- End Mobile Nav -->

						<div class="collapse navbar-collapse justify-content-end">
							<ul class="menu menu-list navbar-nav position-absolute" id="menu-list">
								<li class="nav-item">
									<a class="nav-link d-none d-sm-block" href="/">Accueil</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/tricks">Tricks</a>
								</li>
								{% if session is defined and session.id is defined %}
									<li class="nav-item">
										<a class="nav-link" href="/logout">Déconnexion</a>
									</li>
						    {% else %}
                  <li class="nav-item">
                    <a class="nav-link" href="/connexion">Connexion</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/inscription">Inscription</a>
                  </li>
                {% endif %}
              </ul>
            </div>
				  </div>
        </nav>
    {% endblock %}
    
    {% block content %}{% endblock %}
    
    <!-- Footer section  -->
    {% block footer %}
    <footer class="container-fluid p-3">
      <div class="container ">
        <div class="col-lg-12 text-center">
	        <span>&copy Laurie Ferry 2022 &middot; Tous droits réservés</span>
        </div>
      </div>
    </footer>
    {% endblock %}
    
    {% block javascripts %}
    <!-- Optional JavaScript -->
    {{ encore_entry_script_tags('app') }}
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    {% endblock %}
  </body>
</html>
