<!DOCTYPE html>
<html>
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
		<title>
			{% block title %}{% endblock %}
		</title>

		{% block stylesheets %}
			<!-- Favicon -->
			<link
			rel="shortcut icon" type="image/x-icon" href="./public/favicon.ico"/>
			<!-- Bootstrap CSS -->
			<link
			rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous"/>
			<!-- Bootstrap JS -->
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>

			<base
			href="{{ path('home') }}"/>
			<!-- Fontawesome -->
      <script src="https://kit.fontawesome.com/362e981ce3.js" crossorigin="anonymous"></script>

			<!-- CSS -->
			<link rel="stylesheet" type="text/css" href="css/app.css"/>

      <!-- jQuery -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
                integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
                crossorigin="anonymous" referrerpolicy="no-referrer"></script>
		{% endblock %}
	</head>
	<body>
			{% block header %}
				<nav class="navbar navbar-expand-md">
					<div class="container">
						<a class="navbar-brand d-none d-md-block" href="{{ path('home') }}"><img src="/img/logo.png"></a>           
          
            <!-- Mobile Nav -->
            <div class="d-md-none w-100">
              <ul class="nav-link mobile-ul">
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('home') }}"><i class="fas fa-home"></i></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('home') }}#trick-list"><i class="fa-solid fa-person-snowboarding"></i></a>
                </li>
                {% if app.user %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out"></i></a>
                </li>
                {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login')}}"><i class="fas fa-sign-in"></i></a>
                </li>
                {% endif %}
              </ul>
            </div>
          <!-- End Mobile Nav -->

						<div class="collapse navbar-collapse justify-content-end">
							<ul class="menu menu-list navbar-nav position-absolute" id="menu-list">
								<li class="nav-item">
									<a class="nav-link d-none d-sm-block" href="{{ path('home') }}">Accueil</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('home') }}#trick-list">Tricks</a>
								</li>
								{% if app.user %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
									</li>
						    {% else %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login')}}">Connexion</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register')}}">Inscription</a>
                  </li>
                {% endif %}
              </ul>
            </div>
				  </div>
        </nav>
    {% endblock %}
    
    {% block content %}{% endblock %}
    
    <!-- Footer section  -->
    {% block footer %}
    <footer class="container-fluid p-3">
      <div class="container ">
        <div class="col-lg-12 text-center">
	        <span>&copy Laurie Ferry 2022 &middot; Tous droits réservés</span>
        </div>
      </div>
    </footer>
    {% endblock %}
    
    {% block javascripts %}
    <!-- Iconify -->
    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
    <!-- Optional JavaScript -->
    <script src="js/app.js"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
		<!-- Vendor JS Files -->
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    {% endblock %}
  </body>
</html>
